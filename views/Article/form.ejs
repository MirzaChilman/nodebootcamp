<% include ../Partials/header %>

<% if(data !== null) { %>
    <h1>Edit</h1>
    <form method="POST" action="/article/edit/<%= data._id%>?_method=PUT">
<% } else { %>
    <h1>Create</h1>
    <form method="POST" action="/article/create">
<% } %>
    <%= url %>
    <label for="title">
        <input type="text" name="title" value="<%= data? data.title : '' %>">
    </label>
    <label for="description">
        <input type="text" name="description" value="<%= data ? data.description : '' %>">
    </label>
    <button type="submit">Submit</button>
</form>

<% include ../Partials/footer %>